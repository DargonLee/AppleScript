tell application "System Preferences"	-- Works around 'activate' bug	if not running then run	activate	reveal pane id "com.apple.preference.general"end telltell application "System Events"	tell application process "System Preferences"		tell (first window whose subrole is "AXStandardWindow")			tell checkbox "Automatically hide and show the menu bar"				if its value = 0 then					click				else if its value = 1 then					click				end if			end tell		end tell	end tellend telltell application "System Preferences" to quit